@{
    ViewData["Title"] = "ListProduct";
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
}

@model CategoryViewModel


<form class="forms-sample" asp-action="AddCategory" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="exampleInputName1">Kategori Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Resim Yükleme</label>
        <input type="file" asp-for="ImageFİle" class="file-upload-default">
        <div class="input-group col-xs-12">
            <input type="text" class="form-control file-upload-info" disabled="" placeholder="Upload Image">
            <span class="input-group-append">
                <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
            </span>
        </div>
        <span asp-validation-for="ImageFİle" class="text-danger"></span>
        <span class="text-danger">@ViewBag.img</span>

        <input type="checkbox" name="isresize" value="1" />
        <label for="chkSecim">Resimleri Ölçekle</label>

    </div>
    <div class="form-group">
        <label>Ikon Yükleme </label>
        <input type="file" asp-for="IconFile" class="file-upload-default">
        <div class="input-group col-xs-12">
            <input type="text" class="form-control file-upload-info" disabled="" placeholder="Upload Image">
            <span class="input-group-append">
                <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
            </span>
        </div>
        <span asp-validation-for="IconFile" class="text-danger"></span>
        <span class="text-danger">@ViewBag.ico</span>
    </div>
    <div class="form-group">
        <label for="exampleTextarea1">Kategori Açıklama</label>
        <textarea asp-for="Description" class="form-control" id="exampleTextarea1"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-gradient-primary mr-2">Save</button>
    <button class="btn btn-light">Cancel</button>
</form>

@section Script{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("exampleTextarea1")
    </script>
}
