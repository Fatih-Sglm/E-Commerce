@model EntityLayer.Concrete.VendorProduct

@{
    ViewData["Title"] = "SellProduct";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}
<div class=" grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Ürün Ekleme Bölümü</h4>
            <p class="card-description"></p>

            <form class="forms-sample" asp-action="SellProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Select Category</label>
                    <select asp-for="ProductId" class="form-control">
                        @foreach (var item in ViewBag.ProductID)
                        {
                            <option value="@item.Value" class="form-control">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Ürün Fiyatı</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-gradient-primary text-white">$</span>
                        </div>
                        <input type="text" asp-for="Price" />
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Kargo Fiyatı</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-gradient-primary text-white">$</span>
                        </div>
                        <input type="text" asp-for="Shipping" />
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                <a class="btn btn-light" href="/Vendor/Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

